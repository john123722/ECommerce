<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="~/Scripts/custom/DialogBox.js"></script>
    @*<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>*@


</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("E-Commerce", "Index", "Items", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    @if (Convert.ToBoolean(Request.Cookies["Login"].Value))
                    {
                        <li>@Html.ActionLink("Items", "Index", "Items", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Cart", "ViewCart", "Items", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Reports", "ViewBuyItems", "Items", new { area = "" }, new { @class = "navbar-brand" })</li>
                        if (Convert.ToBoolean(Request.Cookies["IsSeller"].Value))
                        {
                            <li>@Html.ActionLink("BuyReports", "ViewBuyReports", "Items", new { area = "" }, new { @class = "navbar-brand" })</li>
                            <li>@Html.ActionLink("Category", "Index", "Catgories", new { area = "" }, new { @class = "navbar-brand" })</li>
                        }

                        if (Convert.ToBoolean(Request.Cookies["UserType"].Value))
                        {
                            <li>@Html.ActionLink("User Details", "Index", "User", new { area = "" }, new { @class = "navbar-brand" })</li>
                        }

                    }
                </ul>
            </div>
        </div>
        <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                @if (!Convert.ToBoolean(Request.Cookies["Login"].Value))
                {
                    <li>@Html.ActionLink("Sign In", "Login", "Account", new { area = "" }, new { @class = "navbar-brand" })</li>
                }
                else
                {
                    <li>@Html.ActionLink(Request.Cookies["UserName"].Value, "UserDetails", "Account", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, new { @class = "navbar-brand" ,@style = "margin-left:20px"})</li>
                }


            </ul>
        </div>


    </nav>
    <div class="container body-content">
        @RenderBody()

    </div>

    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
